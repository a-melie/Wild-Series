{% extends 'base.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}
    <h1 class="text-center m-3">Les séries</h1>
    <div class="container d-flex flex-column justify-content-center">
    <a href="{{ path('program_new') }}" class="btn btn-danger text-success text-center m-5">Ajouter une nouvelle série</a>
    <table class="table table-hover mt-3">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Résumé</th>
            <th>Affiche</th>
            <th>Pays</th>
            <th>Année</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for program in programs %}
            <tr>
                <td>{{ program.title }}</td>
                <td>{{ program.summary }}</td>
                <td><img src="{{ program.poster }}" alt=" affiche de {{ program.title }}" class="small_img"></td>
                <td>{{ program.country }}</td>
                <td>{{ program.year }}</td>
                <td>
                    <a href="{{ path('program_show', {'id': program.id}) }}" class="text-success btn btn-warning mt-3">Afficher</a>
                    <a href="{{ path('program_edit', {'id': program.id}) }}" class=" text-success btn btn-warning mt-3">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}
