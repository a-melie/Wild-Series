{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <div class="container text-center  mt-3 p-3">
        <h1>Actor</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Name</th>
                <td>{{ actor.name }}</td>
            </tr>
            <tr>
                <th>Programs</th>
                <td>
                    <ul>
                        {% for program in actor.programs %}
                            <li class="list-unstyled"><a  class="text-danger" href="{{ path('program_show', {'slug': program.slug}) }}">{{ program.title }}</a></li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img src="{{  vich_uploader_asset(actor)  }}" alt="picture og {{ actor.name }}"></td>
            </tr>
            </tbody>
        </table>
        <div class="d-flex justify-content-center m-3 p-3">
        <a class="text-success btn btn-warning mr-3" href="{{ path('actor_edit', {'slug': actor.slug}) }}">Edit</a>

        {{ include('actor/_delete_form.html.twig') }}
        </div>
    </div>
    <a  class="text-success btn btn-warning m-5" href="{{ path('actor_index') }}">Retour Ã  la liste des acteurs</a>

{% endblock %}
