{% extends 'base.html.twig' %}

{% block title %}Episodes index{% endblock %}

{% block body %}
    <h1 class="text-center m-3">Episodes index</h1>
    <a href="{{ path('program_index') }}" class="btn btn-danger text-success text-center m-5">Back to Programs</a>

    <div class="container d-flex flex-column justify-content-center">
        <table class="table">
            <thead>
            <tr>
                <th>Program</th>
                <th>Title</th>
                <th>Number</th>
                <th>Synopsis</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for episode in episodes %}
                <tr>
                    <td>{{ episode.season.program.title}}</td>
                    <td></td>
                    <td>{{ episode.title }}</td>
                    <td>{{ episode.number }}</td>
                    <td>{{ episode.synopsis }}</td>
                    <td>
                        <a href="{{ path('episode_show', {'slug': episode.slug}) }}" class=" text-success btn btn-warning mt-3">show</a>
                        <a href="{{ path('episode_edit', {'slug': episode.slug}) }}" class=" text-success btn btn-warning mt-3">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
