{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <div class="container text-center  mt-3 p-3">

        <h1> {{ episode.season.program.title }}</h1>
        <h2 class="mb-5">Saison {{ season.number }} Episode {{ episode.number }}</h2>

        <table class="table mb-5">
            <tbody>
            <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('episode_edit', {'slug': episode.slug})  }}" class=" text-success btn btn-warning mt-3">edit</a>
        {{ include('episode/_delete_form.html.twig') }}
    </div>
    <a href="{{ path('episode_index') }}" class=" text-success btn btn-warning m-5" >back to list</a>

{% endblock %}
