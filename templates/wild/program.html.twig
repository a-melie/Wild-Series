{% extends 'base.html.twig' %}

{% block body %}
        <div class="container bg-primary border border-secondary mt-3 mb-3 rounded shadow">
            <h1 class="text-center">{{ program.title }}</h1>
            {% for season in program.seasons %}
                <a href="{{ path('wild_show_season', {id: season.id}) }}" class="text-danger">
                    <h2>Saison {{ season.number }} ({{ season.year }})</h2>
                </a>
                <p>{{ season.description }}</p>
            {% endfor %}
            {% if program.seasons is empty %}
                <p>pas d'episode disponible</p>
            {% endif %}
        </div>
    <div class="d-flex flex-column ml-4">
        <a href="{{ path('wild_show', {slug: program.title|lower|replace({' ' : '-'})}) }}" class="text-danger">Retour à {{ program.title }}</a>
        <a href="{{ path('wild_index') }}" class="text-danger">Retour à la liste des séries</a>
    </div>
{% endblock %}