{% extends 'base.html.twig' %}

{% block body %}
        <div class="container ">
            <h2>{{ program.title }}</h2>
            {% for season in program.seasons %}
                <a href="{{ path('wild_show_season', {id: program.id}) }}" class="text-danger">
                    <h2>Saison {{ season.number }} ({{ season.year }})</h2>
                </a>
                <p>{{ season.description }}</p>
            {% endfor %}
        </div>

        <p><a href="{{ path('wild_show', {slug: program.title|lower|replace({' ' : '-'})}) }}" class="text-danger">Retour à {{ program.title }}</a></p>
        <a href="{{ path('app_index') }}" class="text-danger">Retour à l'accueil</a>

{% endblock %}