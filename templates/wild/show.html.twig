{% extends 'base.html.twig' %}
{% block title %}{{ slug }}{% endblock %}

{% block body %}
    <div class="container bg-primary border border-secondary mt-3 mb-3 rounded shadow ">
    <div class="media mt-3 mb-3">
        <img class="align-self-start mr-3 imgsize" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Categorie : {{ program.category.name }}</p>
            <p>Acteurs : </p>
            <ul>
                {% for actor in program.actors %}
                    <li class="list-unstyled">{{ actor.name }}</li>
                {% else %}
                    <li class="list-unstyled" >Aucun acteur pour cette série</li>
                {% endfor %}
            </ul>
            <a href="{{ path('wild_show_program', {slug: program.title|lower|replace({' ' : '-'})}) }}"  class="btn btn-danger text-success ">Les saisons</a>

        </div>
    </div>
    </div>
    <a href="{{ path('wild_index') }}" class="btn btn-danger text-success ml-4">
        Retour à la liste des séries
    </a>

{% endblock %}
