{% extends 'base.html.twig' %}
{% block title %}{{ slug }}{% endblock %}

{% block body %}
    <div class="container bg-primary border border-secondary mt-3 mb-3 rounded shadow ">
        <div class="media mt-3 mb-3">
            <img class="align-self-start mr-3 imgsize" src="{{ vich_uploader_asset(program) }}" alt="{{ program.title }} poster">
            <div class="media-body">
                <h1 class="mt-0">{{ program.title }}</h1>
                <p>{{ program.summary }}</p>
                <p>Categorie : {{ program.category.name }}</p>
                <p>Acteurs : </p>
                <ul>
                    {% for actor in program.actors %}
                        <li class="list-unstyled">{{ actor.name }}</li>
                    {% else %}
                        <li class="list-unstyled" >Aucun acteur pour cette série</li>
                    {% endfor %}
                </ul>
                <div class="d-flex flex-column">
                    <a href="{{ path('wild_show_program', {slug: program.slug}) }}"  class="text-danger mt-2">Les saisons</a>
                    {% if app.user %}
                        <div class="like-btn">
                            <a href="#" id="watchlist" class="watchlist {{ app.user.isInWatchlist(program) ? 'active' : '' }}"
                               data-href={{path('program_watchlist', {'id': program.id})}}>
                                <i class="fa-heart fas fa-4x ml-2" ></i>
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <a href="{{ path('wild_index') }}" class="btn btn-danger text-success ml-4">
        Retour à la liste des séries
    </a>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('program_edit', { 'slug': program.slug} ) }}" class="btn btn-danger text-success ml-4">Éditer</a>
    {%endif%}

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('watchlist') }}
{% endblock %}
