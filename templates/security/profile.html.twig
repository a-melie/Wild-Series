{% extends 'base.html.twig' %}
{% block title %}Mon profil{% endblock %}

{% block body %}
    <div class="container text-center  mt-3 p-3">
        <h1>Mon Profil</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Email</th>
                <td>{{ app.user.email }}</td>
            </tr>
            <tr>
                <th>Nom d'utilisateur</th>
                <td>{{ app.user.displayName }}</td>
            </tr>
            <tr>
                <th>Bio</th>
                <td>{{ app.user.bio }}</td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
