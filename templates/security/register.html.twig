{% extends 'base.html.twig' %}
{% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}


{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container text-center  mt-5 p-3  bg-primary border border-secondary mt-3 mb-3 rounded shadow">

        <h1 class="mb-5">Inscription</h1>

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.bio) }}
        {{ form_row(registrationForm.agreeTerms) }}


        <button type="submit" class="btn btn-lg text-success btn-warning mt-3">Valider</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
